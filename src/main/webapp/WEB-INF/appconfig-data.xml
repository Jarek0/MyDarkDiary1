        <bean id="sessionKiller" class="myDarkDiary.service.SessionKiller" />
        
        
        <task:scheduled-tasks>
<task:scheduled ref="sessionKiller" method="run" fixed-delay="30000" />
  </task:scheduled-tasks>-->
        
	<jpa:repositories base-package="myDarkDiary.service.repository"/>
</beans>